<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Group Expenses Tracking"
        android:textColor="@color/colorPrimaryDark"
        android:paddingTop="100dp"
        android:paddingLeft="80dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You can trust us"
        android:id="@+id/textview2"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emailAdress"
        android:hint="Email Address"
        android:focusable="true"
        android:textColor="#ffff25e6"
        android:textColorHighlight="#6200EE"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/logo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"

        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logo"
        android:src="@drawable/img1"
        android:layout_below="@+id/textview2"
        android:layout_centerHorizontal="true"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/password"
        android:hint="Password"
      android:ems="10"
        android:textColor="#ffff25e6"
        android:textColorHighlight="#6200EE"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/emailAdress"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
       android:layout_alignEnd="@+id/emailAdress"
        android:layout_alignRight="@+id/emailAdress"/>





</RelativeLayout>